    Layout = "~/Views/Shared/_Layout.cshtml"; // Asegura que use el layout principal
}

<div class="container text-center mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-lg">
