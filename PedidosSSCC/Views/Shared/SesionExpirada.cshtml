@{
    ViewBag.Title = "Sesión Expirada";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="overlay-bloqueo"></div> <!-- Capa gris bloqueadora -->

<div class="container text-center mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-danger">
                <div class="card-body">
                    <h1 class="text-danger"><i class="bi bi-exclamation-triangle-fill"></i></h1>
                    <h2 class="text-danger">Sesión Expirada</h2>
                    <p class="lead">Tu sesión ha expirado por inactividad.</p>
                    <p>Por favor, vuelve a iniciar sesión para continuar.</p>
                    <a href="@Url.Action("Inicio", "Portal")" class="btn btn-primary">
                        <i class="bi bi-box-arrow-in-right"></i> Iniciar Sesión
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Overlay gris que bloquea toda la pantalla */
    #overlay-bloqueo {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(128, 128, 128, 0.6); /* gris translúcido */
        z-index: 9998; /* por debajo de tu card pero encima del resto */
    }

    /* Subir el card de sesión expirada encima del overlay */
    .card {
        position: relative;
        z-index: 9999;
    }
</style>

<script>
    $(document).ready(function () {
        $(".breadcrumb-container").hide();
        $('#contenidoPagina').fadeIn();
        ocultarDivCargando();
    });
</script>
