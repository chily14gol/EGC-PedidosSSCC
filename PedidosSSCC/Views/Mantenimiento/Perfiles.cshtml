@using PedidosSSCC.Properties;
@{
    ViewBag.Title = "Perfiles";
    var token = Html.AntiForgeryToken().ToHtmlString();
}

<div class="container-fluid">
    <div id="antiForgeryContainer" style="display: none;">
        @Html.Raw(token)
    </div>
    <div class="section-title-wrapper">
        <h1 class="page-title">Perfiles</h1>
        <div class="title-btn-group">
            <button id="btnNuevo" type="button" class="btn btn-lg btn-primary btn-ico-agregar">Añadir perfil</button>
            <div class="dropdown">
                <ul class="dropdown-menu">
                    <li id="btnExportarContainer"></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="content-box">
        <form class="table-filter">
            <div class="form-default">
                <div class="buscador">
                    <input type="text" class="form-control" id="formBuscar" placeholder="@Resources.Placeholder_Buscar">
                </div>
            </div>
        </form>
        <table id="table" class="table table-striped nowrap" style="width:100%">
            <thead>
                <tr>
                    <th data-priority="1">Nombre</th>
                    <th class="th-action" data-priority="2"><span class="sReader"><span class="sReader">Acción</span></span></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<!-- Modal para edición de perfil -->
<div class="modal fade" id="modalEditar" tabindex="-1" aria-labelledby="modalPerfilLabel" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title h4" id="modalPerfilLabel">Editar Perfil</h2>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form class="form-wrapper">
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group">
                                <label for="nombrePerfil" class="form-label">@Resources.Etiqueta_NombreObligatorio</label>
                                <input type="text" class="form-control" id="nombrePerfil" maxlength="150" required>
                            </div>
                            <div class="treeview-wrapper">
                                <div class="treeview-container">
                                    <h3 class="h5">Acceso</h3>
                                    <div id="tree-container-acceso"></div>
                                </div>
                                <hr class="treeview-separator" />
                                <div class="treeview-container">
                                    <h3 class="h5">Edición</h3>
                                    <div id="tree-container-edicion"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer btn-group-modal">
                <button type="button" class="btn btn-primary" id="btnGuardarPerfil">@Resources.Boton_Guardar</button>
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">@Resources.Modal_Boton_Cancelar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jstree/3.3.12/themes/default/style.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jstree/3.3.12/jstree.min.js"></script>
    <script>
        window.AppConfig = Object.assign({}, window.AppConfig, {
            urls: {
                ObtenerPermisos: '@Url.Action("ObtenerPermisos", "Mantenimiento")',
                EliminarPerfil: '@Url.Action("EliminarPerfil", "Mantenimiento")',
                ObtenerPerfiles: '@Url.Action("ObtenerPerfiles", "Mantenimiento")',
                GuardarPerfil: '@Url.Action("GuardarPerfil", "Mantenimiento")'
            }
        });
    </script>
    <script src="~/Scripts/Vistas/Mantenimiento/Perfiles.js?v=@DateTime.Now.Ticks"></script>
}