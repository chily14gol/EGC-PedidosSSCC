@using PedidosSSCC.Properties;
@{
    ViewBag.Title = "Configuracion";
}

<div class="container-fluid">
    <div class="section-title-wrapper">
        <h1 class="page-title">@Resources.Titulo_Configuracion</h1>
        <div class="title-btn-group">
            <button id="btnNuevo" type="button" class="btn btn-lg btn-primary btn-ico-agregar">@Resources.Boton_AgregarConfiguracion</button>
            <div class="dropdown">
                <ul class="dropdown-menu">
                    <li id="btnExportarContainer"></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="content-box">
        <form class="table-filter">
            <div class="form-default">
                <div class="buscador">
                    <input type="text" class="form-control" id="formBuscar" placeholder="@Resources.Placeholder_Buscar">
                </div>
            </div>
        </form>
        <table id="table" class="table table-striped nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>Id</th>
                    <th data-priority="1">@Resources.Etiqueta_Descripcion</th>
                    <th>Valor</th>
                    <th class="th-action" data-priority="2"><span class="sReader">Acción</span></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<!-- Modal de Edición -->
<div class="modal fade" id="modalEditar" tabindex="-1" aria-labelledby="modalEditarLabel" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title h4" id="modalEditarLabel">@Resources.Config_Editar</h2>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <form class="form-wrapper">
                    <input type="hidden" id="idConfiguracion">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="descripcion" class="form-label">Descripción *</label>
                                <input type="text" class="form-control" id="descripcion" disabled>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="descripcion" class="form-label">Valor *</label>
                                <input type="text" class="form-control" id="valor" maxlength="10" disabled>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer btn-group-modal">
                <button type="button" class="btn btn-primary" onclick="guardarConfiguracion()">@Resources.Boton_Guardar</button>
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">@Resources.Modal_Boton_Cancelar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        window.AppConfig = Object.assign({}, window.AppConfig, {
            urls: {
                eliminarConfiguracion: '@Url.Action("EliminarConfiguracion", "Mantenimiento")',
                guardarConfiguracion: '@Url.Action("GuardarConfiguracion", "Mantenimiento")',
                obtenerConfiguraciones: '@Url.Action("ObtenerConfiguraciones", "Mantenimiento")'
            }
        });
    </script>
    <script src="~/Scripts/Vistas/Mantenimiento/Configuraciones.js?v=@DateTime.Now.Ticks"></script>
}