@using PedidosSSCC.Properties;
@{
    ViewBag.Title = "Usuarios";
}

<div class="container-fluid">
    <div class="section-title-wrapper">
        <h1 class="page-title">Usuarios</h1>
        <div class="title-btn-group">
            <button id="btnNuevo" type="button" class="btn btn-lg btn-primary btn-ico-agregar">Añadir usuario</button>
            <div class="dropdown">
                <ul class="dropdown-menu">
                    <li id="btnExportarContainer"></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="content-box">
        <form class="table-filter">
            <div class="form-default">
                <div class="buscador">
                    <input type="text" class="form-control" id="formBuscar" placeholder="@Resources.Placeholder_Buscar">
                </div>
            </div>
            <div class="form-advance">
                <div class="row">
                    <div class="col-sm-12 col-md-4 col-xxl-3">
                        <div class="form-group">
                            <label class="form-label" for="filterUsuario">Usuario</label>
                            <input type="text" id="filterUsuario" class="form-control">
                        </div>
                    </div>
                    <div class="col-sm-6 col-md-4 col-xxl-3">
                        <div class="form-group">
                            <label class="form-label" for="filterPersona">Persona</label>
                            <input type="text" id="filterPersona" class="form-control">
                        </div>
                    </div>
                    <div class="col-sm-6 col-md-4 col-xxl-3">
                        <div class="form-group">
                            <label class="form-label" for="filterPerfil">Perfil</label>
                            <input type="text" id="filterPerfil" class="form-control">
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-btn-group">
                <button type="button" id="btnBuscar" class="btn btn-primary">@Resources.Boton_Buscar</button>
                <button type="button" id="btnLimpiar" class="btn btn-outline-secondary" style="display: none;">@Resources.Boton_Limpiar</button>
                <button type="button" id="btnAvanzado" class="btn btn-link">@Resources.Boton_BusquedaAvanzada</button>
            </div>
        </form>
        <table id="table" class="table table-striped nowrap" style="width:100%">
            <thead>
                <tr>
                    <th data-priority="1">Usuario</th>
                    <th>Persona</th>
                    <th>Perfil</th>
                    <th class="th-action" data-priority="2"><span class="sReader">Acción</span></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<!-- Modal de Edición -->
<div class="modal fade" id="modalEditar" tabindex="-1" aria-labelledby="modalEditarLabel" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title h4" id="modalEditarLabel">Editar Usuario</h2>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                @*my-0 añadido porque el último campo es un checkbox que ocupa 12 columnas*@
                <form class="form-wrapper my-0">
                    <input type="hidden" id="usuarioOriginal">
                    <div class="row">
                        <div class="col-sm-5">
                            <div class="form-group">
                                <label for="usuario">Usuario *</label>
                                <input type="text" class="form-control" id="usuario" name="usuario" disabled>
                            </div>
                        </div>
                        <div class="col-sm-7">
                            <div class="form-group">
                                <label for="nombrePersona">Persona *</label>
                                <div class="styled-select-wrapper">
                                    <select id="nombrePersona" class="styled-select form-control" name="nombrePersona" disabled>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="email">Email *</label>
                                <input type="text" class="form-control" id="email" name="email" oninput="validarEmail(this)" disabled>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="perfilUsuario">Perfil *</label>
                                <div class="styled-select-wrapper">
                                    <select class="styled-select form-control" id="perfiles" name="perfiles">
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-check full-col">
                                <input type="checkbox" class="form-check-input" id="verTodo" name="verTodo" />
                                <label for="verTodo" class="form-check-label">Ver todo</label>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer btn-group-modal">
                <button type="button" class="btn btn-primary" onclick="guardarUsuario()">@Resources.Boton_Guardar</button>
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">@Resources.Modal_Boton_Cancelar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        window.AppConfig = Object.assign({}, window.AppConfig, {
            urls: {
                eliminarUsuario: '@Url.Action("EliminarUsuario", "Mantenimiento")',
                guardarUsuario: '@Url.Action("GuardarUsuario", "Mantenimiento")',
                obtenerPersonas: '@Url.Action("ObtenerPersonas", "Mantenimiento")',
                obtenerPerfiles: '@Url.Action("ObtenerPerfiles", "Mantenimiento")',
                obtenerUsuarios: '@Url.Action("ObtenerUsuarios", "Mantenimiento")',
                obtenerEmailPersona: '@Url.Action("ObtenerEmailPersona", "Mantenimiento")'
            }
        });
    </script>
    <script src="~/Scripts/Vistas/Mantenimiento/Usuarios.js?v=@DateTime.Now.Ticks"></script>
}