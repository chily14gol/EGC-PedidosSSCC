@using PedidosSSCC.Properties;
@{
    ViewBag.Title = "Contratos CAU";
}

<div class="container-fluid">
    <div class="section-title-wrapper">
        <h1 class="page-title">Contratos CAU</h1>
        <div class="title-btn-group">
            <button id="btnNuevo" type="button" class="btn btn-lg btn-primary btn-ico-agregar">Añadir Contrato</button>
        </div>
    </div>
    <div class="content-box">
        <form class="table-filter">
            <div class="form-default">
                <div class="buscador">
                    <input type="text" class="form-control" id="formBuscar" placeholder="@Resources.Placeholder_Buscar">
                </div>
            </div>
        </form>
        <table id="tableContratosCAU" class="table table-striped nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>Fecha Inicio</th>
                    <th>Fecha Fin</th>
                    <th>Coste H. Fuera alcance</th>
                    <th>Coste H. Dentro alcance</th>
                    <th>Coste H. Guardia</th>
                    <th>Coste H. Software</th>
                    <th>Precio Guardia</th>
                    <th class="th-action"><span class="sReader">Acción</span></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="modalEditar" tabindex="-1" aria-labelledby="modalEditarLabel" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title h4" id="modalEditarLabel">@Resources.Titulo_Contratos</h2>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="idContrato">
                <form class="form-wrapper row g-3">
                    <div class="col-md-6">
                        <label class="form-label" for="fechaInicio">@Resources.Etiqueta_FechaInicio *</label>
                        <input type="date" class="form-control" id="fechaInicio" required />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label" for="fechaFin">@Resources.Etiqueta_FechaFin *</label>
                        <input type="date" class="form-control" id="fechaFin" required />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label" for="costeHoraF">@Resources.Etiqueta_CosteHoraF *</label>
                        <div class="input-group">
                            <input type="number" class="form-control form-control-sm" id="costeHoraF" name="costeHoraF" required />
                            <span class="input-group-text">€</span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label" for="costeHoraD">Coste Hora Dentro de alcance *</label>
                        <div class="input-group">
                            <input type="number" class="form-control form-control-sm" id="costeHoraD" name="costeHoraD" required />
                            <span class="input-group-text">€</span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label" for="costeHoraG">Coste Hora Guardia *</label>
                        <div class="input-group">
                            <input type="number" class="form-control form-control-sm" id="costeHoraG" name="costeHoraG" required />
                            <span class="input-group-text">€</span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label" for="costeHoraG">Coste Hora Software *</label>
                        <div class="input-group">
                            <input type="number" class="form-control form-control-sm" id="costeHoraS" name="costeHoraS" required />
                            <span class="input-group-text">€</span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label" for="precioGuardia">Precio Guardia *</label>
                        <div class="input-group">
                            <input type="number" class="form-control form-control-sm" id="precioGuardia" name="precioGuardia" required />
                            <span class="input-group-text">€</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label" for="tarifaF">Tarea Fuera de alcance *</label>
                        <select id="tarifaF" class="form-select" required></select>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label" for="tarifaD">Tarea Dentro de alcance *</label>
                        <select id="tarifaD" class="form-select" required></select>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label" for="tarifaG">Tarea Guardia *</label>
                        <select id="tarifaG" class="form-select" required></select>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label" for="tarifaG">Tarea Software *</label>
                        <select id="tarifaS" class="form-select" required></select>
                    </div>
                </form>
            </div>
            <div class="modal-footer btn-group-modal">
                <button type="button" class="btn btn-primary" id="btnGuardarContrato">Guardar</button>
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Excluidas Guardia -->
<div class="modal fade" id="modalExcluidas" tabindex="-1" aria-labelledby="modalExcluidasLabel" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title h4" id="modalExcluidasLabel">Empresas excluidas de guardia</h2>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="exCcaId" />
                <div class="row g-3 align-items-end">
                    <div class="col-md-8">
                        <label class="form-label" for="selEmpresaExcluida">Empresa</label>
                        <select id="selEmpresaExcluida" class="form-select">
                            <option value="">Seleccione empresa</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <button id="btnAgregarExcluida" type="button" class="btn btn-primary w-100">Añadir</button>
                    </div>
                </div>

                <hr class="my-3" />

                <div class="table-responsive">
                    <table id="tableExcluidas" class="table table-striped align-middle">
                        <thead>
                            <tr>
                                <th>Empresa</th>
                                <th class="text-end"></th>
                            </tr>
                        </thead>
                        <tbody><!-- filas dinámicas --></tbody>
                    </table>
                </div>
            </div>

            <div class="modal-footer btn-group-modal">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .th-action {
            width: 160px !important; /* prueba 160–180px */
            text-align: center;
            white-space: nowrap;
        }

        .td-btn {
            min-width: 160px;
        }
    </style>
    <script>
        window.AppConfig = Object.assign({}, window.AppConfig, {
            urls: {
                ObtenerContratosCAU: '@Url.Action("ObtenerContratosCAU", "ContratosCAU")',
                GuardarContratoCAU: '@Url.Action("GuardarContratoCAU", "ContratosCAU")',
                EliminarContratoCAU: '@Url.Action("EliminarContratoCAU", "ContratosCAU")',
                ObtenerTareasCombo: '@Url.Action("ObtenerTareasCombo", "Mantenimiento")',
                ObtenerEmpresasCombo: '@Url.Action("ObtenerEmpresasCombo", "ContratosCAU")',
                ObtenerExcluidasGuardia: '@Url.Action("ObtenerExcluidasGuardia", "ContratosCAU")',
                AgregarExcluidaGuardia: '@Url.Action("AgregarExcluidaGuardia", "ContratosCAU")',
                EliminarExcluidaGuardia: '@Url.Action("EliminarExcluidaGuardia", "ContratosCAU")'
            }
        });
    </script>
    <script src="~/Scripts/Vistas/Mantenimiento/ContratosCAU.js?v=@DateTime.Now.Ticks"></script>
}
